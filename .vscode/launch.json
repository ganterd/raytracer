    "version": "0.2.0",
    "configurations": [
        {
            "name": "rt_lib_tests (debug)",
            "type": "cppdbg",
            "preLaunchTask": "Build Path Tracer Tests (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/rt_lib_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "pt_app_minimal_ppm (debug)",
            "type": "cppdbg",
            "preLaunchTask": "Build PPM Path Tracer (Debug)",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/pt_app_minimal_ppm",
            "args": [
                "${workspaceFolder}/scenes/test.blend"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "pt_app_minimal_ppm (release)",
            "preLaunchTask": "Build PPM Path Tracer (Release)",
            "request": "launch",
            "type": "cppdbg",
            "program": "${workspaceFolder}/build/release/bin/pt_app_minimal_ppm",
            "args": [
                "${workspaceFolder}/scenes/test_sponza.blend"
            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/release",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "Path Tracer Minimal (Release Windows) Launch",
            "preLaunchTask": "Build PPM Path Tracer (Release)",
            "type": "cppvsdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/build/bin/Release/pt_app_minimal_ppm.exe",
                "cwd": "${workspaceFolder}/build",
            },
            "args": [
                "${workspaceFolder}/scenes/test_sponza.blend"
            ],
            "externalConsole": true
        },
        {
            "name": "Path Tracer Minimal (Debug Windows) Launch",
            "preLaunchTask": "Build PPM Path Tracer (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/build/bin/Debug/pt_app_minimal_ppm.exe",
                "cwd": "${workspaceFolder}/build",
            },
            "args": [
                "${workspaceFolder}/scenes/test.blend"
            ],
            "externalConsole": true
        }
    ]
}
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "mkdirs",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/build/debug",
                "${workspaceFolder}/build/release"
            ]
        },
        {
            "type": "shell",
            "label": "CMake (Debug)",
            "dependsOn": [
                "mkdirs"
            ],
            "command": "cmake",
            "args": [
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "CMake (Release)",
            "dependsOn": [
                "mkdirs"
            ],
            "command": "cmake",
            "args": [
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Path Tracer Tests (Debug)",
            "dependsOn": [
                "CMake (Debug)"
            ],
            "command": "make",
            "args": [
                "rt_lib_tests",
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
		{
			"type": "shell",
			"label": "Build PPM Path Tracer (Debug)",
			"dependsOn": [
				"CMake (Debug)"
			],
			"command": "make",
			"args": [
				"pt_app_minimal_ppm",
				"-j4"
			],
			"options": {
				"cwd": "${workspaceFolder}/build/debug"
			},
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "Build PPM Path Tracer (Release)",
			"dependsOn": [
				"CMake (Release)"
			],
			"command": "make",
			"args": [
				"pt_app_minimal_ppm",
				"-j4"
			],
			"options": {
				"cwd": "${workspaceFolder}/build/release"
			},
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		}
    ]
}